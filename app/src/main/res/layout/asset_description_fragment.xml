<?xml version="1.0" encoding="UTF-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/assetImage"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_marginBottom="@dimen/margin_padding_large"
        app:srcCompat="@drawable/project2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/assetTitleDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            style="@style/ProjectTitle"
            android:text="TextView"/>

        <TextView
            android:id="@+id/assetDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/ProjectSubtitle"
            android:text="TextView"/>
    </LinearLayout>

</LinearLayout>