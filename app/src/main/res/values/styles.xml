<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorSecondary</item>

    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


    <!-- Card Styles. -->

    <style name="CardStyle">
        <item name="android:paddingTop">@dimen/margin_padding_normal</item>
        <item name="android:paddingBottom">@dimen/margin_padding_normal</item>
    </style>

    <style name="ListBoxStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginBottom">@dimen/margin_padding_small</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:orientation">horizontal</item>

    </style>


    <!-- Button Styles. -->

    <style name="Button">
        <item name="android:paddingTop">@dimen/margin_padding_normal</item>
        <item name="android:paddingBottom">@dimen/margin_padding_normal</item>
        <item name="android:paddingLeft">@dimen/margin_padding_normal</item>
        <item name="android:paddingRight">@dimen/margin_padding_normal</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="RoundedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/margin_padding_normal</item>
        <item name="android:paddingBottom">@dimen/margin_padding_normal</item>
        <item name="android:paddingLeft">@dimen/margin_padding_normal</item>
        <item name="android:paddingRight">@dimen/margin_padding_normal</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_gravity">center_horizontal</item>

    </style>



    <!-- Text Styles. -->

    <style name="ProjectTitle">
        <item name="android:textSize">@dimen/text_size_xxnormal</item>
        <item name="android:textColor">@color/colorBlack</item>
        fontPath="fonts/Montserrat-Bold.ttf"
    </style>

    <style name="ProjectSubtitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="fontPath">fonts/AvenirLTStd-Book.ttf</item>
        <item name="android:textSize">@dimen/text_size_xnormal</item>

    </style>


    <style name="ProjectSubtitleBold">
        <item name="android:textSize">@dimen/text_size_xnormal</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/margin_padding_xtiny</item>
        <item name="android:layout_weight">2</item>
        <item name="fontPath">fonts/AvenirLTStd-Medium.ttf</item>
    </style>



